<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/OkHttp3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OKHTTP3" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/WorkManager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WORK MANAGER" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Intent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INTENT" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Koin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KOIN" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Retrofit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RETROFIT" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Coroutines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COROUTINES" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/MVVM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MVVM ARCHITECTURE" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/MVP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MVP ARCHITECTURE" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/MVPClean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MVP CLEAN ARCHITECTURE" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/MVVI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MVVI ARCHITECTURE" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Compose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COMPOSE ARCHITECTURE" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>