<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/WorkManager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WORK MANAGER TEST" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Intent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INTENT TEST" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Koin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KOIN TEST" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Retrofit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RETROFIT TEST" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Coroutines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COROUTINES TEST" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/MVVM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MVVM ARCHITECTURE TEST" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/MVP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MVP ARCHITECTURE TEST" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/MVPClean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MVP CLEAN ARCHITECTURE TEST" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/MVVI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MVVI ARCHITECTURE TEST" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>